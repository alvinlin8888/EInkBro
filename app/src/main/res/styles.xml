<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="dragIcon">@drawable/ic_drag</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="colorControlNormal">@android:color/black</item>
    </style>

    <!-- remove preference activity background color -->
    <style name="PreferenceThemeOverlay.v14">
        <item name="android:background">@android:color/white</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:selectableItemBackground">@null</item>
    </style>

    <style name="TouchAreaDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:backgroundDimAmount">0</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowBackground">@drawable/dialog_border_bg</item>

    </style>
    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:backgroundDimAmount">0</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="NoAnimation" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@null</item>
    </style>
</resources>